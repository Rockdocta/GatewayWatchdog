<Application x:Class="GatewayWatchdog.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Exit="Application_Exit"
             xmlns:local="clr-namespace:GatewayWatchdog"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="PoorTemplate" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="MidTemplate" TargetType="TextBlock">
            <Setter Property="Foreground" Value="DarkOrange"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="GoodTemplate" TargetType="TextBlock">
            <Setter Property="Foreground" Value="YellowGreen"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="ExcellentTemplate" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="UndefinedTemplate" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Application.Resources>
</Application>
